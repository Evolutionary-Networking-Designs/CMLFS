# Set CC and CXX compiler with gcc as libunwind will not build against libc++
export CXX=${CMLFS_TARGET}-g++
export  CC=${CMLFS_TARGET}-gcc

cd libunwind

cmake -B build -G Ninja \
      -DCMAKE_INSTALL_PREFIX=/llvmtools \
      -DLIBUNWIND_ENABLE_SHARED=ON \
      -DCMAKE_C_FLAGS="-fPIC" \
      -DCMAKE_CXX_FLAGS="-fPIC"
ninja -C build 
ninja -C build install
rm -rf build       
